
@model IEnumerable<DepartmentDTOs>


<h1>All Department</h1>

<a class="btn btn-primary my-3" asp-controller="Departments" asp-action="Create">Create New Department</a>


<br />
@if (Model.Any())
{
	<table class=" table table-striped table-hover mt-2">
		<thead class="text-center">
			<tr>
				<th>@Html.DisplayNameFor(d=>d.Code)</th>
				<th>@Html.DisplayNameFor(d=>d.Name)</th>
				<th>@Html.DisplayNameFor(d => d.Description)</th>
				<th>@Html.DisplayNameFor(d => d.DateOfCreation)</th>
				<th>Details</th>
				<th>Update</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var deptment in Model)
			{
				<td>@deptment.Code</td>
			<td>@deptment.Name</td>
			<td>@deptment.Description</td>
			<td>@deptment.DateOfCreation</td>
			<td><a class=" btn btn-primary" asp-action="Details">Details</a> <i class="fas fa-eys"></i></td>
			<td><a class=" btn btn-secondary" asp-action="Ubdate">Update</a> <i class="fas fa-edit"></i></td>
			<td><a class=" btn btn-danger" asp-action="Delete">Delete</a> <i class="fas fa-trash"></i></td>

			}
		</tbody>


	</table>
}else
{
	<div class="table table-striped table-hover mt-2"> 
		<h2>No Department Found !</h2>
	</div>
}