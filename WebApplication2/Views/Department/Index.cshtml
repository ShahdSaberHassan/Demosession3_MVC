
@model IEnumerable<DepartmentDTOs>


<h1>All Department</h1>

<a class="btn btn-primary my-3" asp-controller="Department" asp-action="Create">Create Dpartment</a>


<br />
@if (Model.Count()>0 )
{
	<table class=" table table-striped table-hover mt-2">
		<thead class="text-center">
			<tr>
				<th>@Html.DisplayNameFor(d=>d.Code)</th>
				<th>@Html.DisplayNameFor(d=>d.Name)</th>
				<th>@Html.DisplayNameFor(d => d.Description)</th>
				<th>@Html.DisplayNameFor(d => d.DateOfCreation)</th>
				<th>Details</th>
				<th>Update</th>
				<th>Delete</th>
			</tr>
		</thead>
   		<tbody>
	     		@foreach(var deptment in Model)
			{ 
			<tr>
			<td>@deptment.Code</td>
			<td>@deptment.Name</td>
			<td>@deptment.Description</td>
			<td>@deptment.DateOfCreation</td>
			<td><a class=" btn btn-primary" asp-action="Details" asp-route-id="@deptment.DeptId">Details</a> <i class="fas fa-eye"></i></td>
			<td><a class=" btn btn-success" asp-action="Update" asp-route-id="@deptment.DeptId" >Update</a> <i class="fas fa-edit"></i></td>
			@* <td><a class=" btn btn-danger" asp-action="Delete" asp-route-id="@deptment.DeptId" >Delete</a> <i class="fas fa-trash"></i></td> *@
			<td>
						<button type="button"
								class="btn btn-danger"
								data-bs-toggle="modal"
								data-bs-target="#DeleteModal-@deptment.DeptId">
							<i class="fas fa-trash"></i> Delete
						</button>
						<div class="modal fade"
							 id="DeleteModal-@deptment.DeptId"
							 tabindex="-1"
							 aria-labelledby="exampleModalLabel"
							 aria-hidden="true">
							<div class="modal-dialog">
								<div class="modal-content">
									<div class="modal-header">
										<h1 class="modal-title fs-5" id="exampleModalLabel">
											Delete Department
										</h1>
										<button type="button"
												class="btn-close"
												data-bs-dismiss="modal"
												aria-label="Close"></button>
									</div>
									<div class="modal-body">Are You Sure to Delete this Department?</div>
									<div class="modal-footer">
										<form asp-action="Delete"
											  asp-controller="Department"
											  asp-route-id="@deptment.DeptId"
											  class="mt-4">
											<button type="button"
													class="btn btn-secondary"
													data-bs-dismiss="modal">
												Close
											</button>
											<input type="submit" value="Delete" class="btn btn-danger" />
										</form>
									</div>
								</div>
							</div>
						</div>
			</td>
			</tr>
			}
		</tbody>


	</table>
}else
{
	<div class="table table-striped table-hover mt-2"> 
		<h2>No Department Found !</h2>
	</div>
}